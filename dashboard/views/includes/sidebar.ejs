
<div class="sidebar" data-color="black" id="sugarizer-sidebar">

	<div class="logo">
		<a href="/dashboard" class="simple-text"><%= server.name %></a>
		<div class="server-description"><%= server.description %></div>
		<div class="qr-icon" onclick="generateQRCode()"></div>
	</div>

	<div class="sidebar-wrapper">
		<ul class="nav">
			<li>
				<a class="pointer hide-desk-el" onclick="jumpTo('/dashboard/logout')">
					<i class="custom-icon shutdown-icon"></i>
					<p data-l10n-id="logout">Logout</p>
			  	</a>
			</li>

			<%if (module == 'dashboard') { %>
				<li class="active">
			<% } else {%>
				<li>
			<% }%>
				<a class="pointer" onclick="jumpTo('/dashboard')">
					<i class="custom-icon home-icon"></i>
					<p data-l10n-id="dashboard">Home</p>
				</a>
			</li>
			<%if (module == 'users') { %>
				<li class="active">
			<% } else {%>
				<li>
			<% }%>
				<a class="pointer" onclick="jumpTo('/dashboard/users')">
					<i class="custom-icon xo-icon"></i>
					<p data-l10n-id="users">Users</p>
				</a>
			</li>
			<%if (module == 'activities') { %>
				<li class="active">
			<% } else {%>
				<li>
			<% }%>
				<a class="pointer" onclick="jumpTo('/dashboard/activities')">
					<i class="custom-icon activity-icon"></i>
					<p data-l10n-id="activities">Activities</p>
				</a>
			</li>
			<%if (module == 'journals') { %>
				<li class="active">
			<% } else {%>
				<li>
			<% }%>
				<a class="pointer" onclick="jumpTo('/dashboard/journal')">
					<i class="custom-icon journal-icon"></i>
					<p data-l10n-id="journals">Journals</p>
				</a>
			</li>
			<%if (module == 'classrooms') { %>
				<li class="active">
			<% } else {%>
				<li>
			<% }%>
				<a class="pointer" onclick="jumpTo('/dashboard/classrooms')">
					<i class="custom-icon classroom-icon"></i>
					<p data-l10n-id="classrooms">Classrooms</p>
				</a>
			</li>
			<%if (account.user && account.user.role == "admin" || account.user.role == "teacher") { %>
			<%if (module == 'assignments') { %>
				<li class="active">
			<% } else {%>
				<li>
			<% }%>
				<a class="pointer" onclick="jumpTo('/dashboard/assignments')">
					<i class="custom-icon assignment-icon"></i>
					<p data-l10n-id="assignments">Assignments</p>
				</a>
			</li>
			<% } %>
			<%if (account.user && account.user.role == "admin") { %>
			<%if (module == 'stats') { %>
				<li class="active">
			<% } else {%>
				<li>
			<% }%>
				<a class="pointer" onclick="jumpTo('/dashboard/stats')">
					<i class="custom-icon stats-icon"></i>
					<p data-l10n-id="stats">Statistics</p>
				</a>
			</li>
			<% } %>
			<%if (module == 'profile') { %>
				<li class="active hide-desk-el">
			<% } else {%>
				<li class="hide-desk-el">
			<% }%>
				<a class="pointer" onclick="jumpTo('/dashboard/profile')">
					<i class="custom-icon user-icon"></i>
					<p data-l10n-id="profile">Profile</p>
				</a>
			</li>
		</ul>
	</div>
</div>


<div id="qrpopup" class="modal fade" tabindex="-1" role="dialog">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" style="width: 30px; height: 30px; font-size: 30px" class="close" data-dismiss="modal">&times;</button>
			</div>
			<div class="modal-body" style="margin-top: 15px;">
				<div id="qrplaceholder"></div>
			</div>
			<div class="modal-footer">
				<p style="text-align:center" data-l10n-id="scanqrcode">Scan this QR Code with your device to set automatically the server URL</p>
			</div>
		</div>
	</div>
</div>
